{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
>

    <div class="containerCardsHome">

        <div class="containerContent">


            <div class="info">

                <h1 class="welcome">DJ SHOP</h1>
                <h6>A custom Xbox shop </h6>
            </div>
        </div>



        <div class="containerWall">

            <div class="pad">

            </div>

            <div class="wallGrad" style="--cover:url({{asset('image/circuit-blur.jpg')}})">

                <div class="wallHide">
                </div>
            </div>
        </div>

    </div>



<div class="container containerLastCreation">
    <div class="lastCreations"> Nos Dernieres Cr√©ations </div>


    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item peopleCarouselImg active">
                <img src="{{asset('uploads/home.png')}}" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <a class="linkCarousel" href="{{ path('app_xbox_index') }}"> Boutique</a>
                </div>
            </div>
            {% for lastP in lastProduct %}

            {% set picture = xboxs[lastP].picture|split('_') %}



            <div class="carousel-item peopleCarouselImg">
                <img class="d-block w-100" style="width:100%" src="{{ asset(picture.0)}}" alt="{{ picture.0 }}">
                <div class="carousel-caption d-none d-md-block">
                    <a class="linkCarousel" href="{{ path('app_xbox_show', {'id': xboxs[lastP].id}) }}"> Ouvrir</a>
                </div>

            </div>


            {% endfor %}

        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>




{% endblock %}